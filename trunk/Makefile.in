VERSION = 0.1

prefix = @prefix@
exec_prefix = @exec_prefix@
libdir = @libdir@
bindir = @bindir@
includedir = @includedir@

VPATH = @srcdir@

CC = @CC@
CPPFLAGS = -I. @CPPFLAGS@
CFLAGS = -I./liblzfx @CFLAGS@
LDFLAGS = @LDFLAGS@
RANLIB = @RANLIB@
INSTALL = @INSTALL@
INSTALL_DATA = @INSTALL_DATA@

DISTNAME = lzfx-$(VERSION)
DISTFILES = README LICENSE liblzfx/lzfx.c liblzfx/lzfx.h test.c \
            configure Makefile.in install-sh
UTILDIR = utility
TESTDIR = tests
TESTFILES = $(TESTDIR)/empty.test \
            $(TESTDIR)/random.test

all: Makefile liblzfx.a test util

clean:
	-rm -f *.o *.a

lzfx.o: liblzfx/lzfx.c liblzfx/lzfx.h
	$(CC) $(CFLAGS) liblzfx/lzfx.c -c

liblzfx.a: lzfx.o
	rm -f $@
	$(AR) rc $@ $^
	$(RANLIB) $@

test: tests/test.c
	$(CC) $(CFLAGS) $(TESTDIR)/test.c liblzfx/lzfx.c -llzf -o $(TESTDIR)/test

check: test
	dd if=/dev/zero of=$(TESTDIR)/empty.test bs=1M count=4 > /dev/null 2>&1
	dd if=/dev/urandom of=$(TESTDIR)/random.test bs=1M count=1 > /dev/null 2>&1
	$(TESTDIR)/test $(TESTDIR)/*.test
	-rm -f $(TESTFILES)

install: all
	$(INSTALL) -d $(includedir)
	$(INSTALL_DATA) liblzfx/lzfx.h $(includedir)
	$(INSTALL) -d $(libdir)
	$(INSTALL_DATA) liblzfx.a $(libdir)

util: liblzfx/lzfx.c
	$(CC) $(CFLAGS) $(UTILDIR)/util.c liblzfx/lzfx.c -o lzfx

dist:
	mkdir $(DISTNAME)
	tar c $(DISTFILES) | tar xpC $(DISTNAME)
	-chown -R root.root $(DISTNAME)
	chmod -R u=rwX,go=rX $(DISTNAME)
	tar cvf - $(DISTNAME) | gzip -9 > $(DISTNAME).tar.gz
	rm -rf $(DISTNAME)
	ls -l $(DISTNAME).tar.gz

Makefile: Makefile.in
	./config.status

